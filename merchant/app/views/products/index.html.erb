<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag "products/#{product.image_url}" %></td>
      <td><span class="product_title"><%= product.title %></span></td>
      <td><%= product.description %></td>
      <td><%= print_price(product.price) %></td>
      <td><%= print_stock(product.stock) %></td>
      <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>
      <td><%= link_to "Show", product_path(product) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Create new Product', new_product_path %>
